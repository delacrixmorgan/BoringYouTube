{
  "manifest_version": 3,
  "name": "Boring YouTube",
  "version": "{{VERSION}}",
  "description": "A lightweight browser extension that turns YouTube thumbnails grayscale â€” inspired by Arc's Boring YouTube Boost.",
  
  "host_permissions": [
    "*://www.youtube.com/*",
    "*://youtube.com/*"
  ],
  
  "permissions": [
    "storage"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Toggle Boring YouTube",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://youtube.com/*"
      ],
      "js": ["content-script.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "author": "Delacrix Morgan",
  "homepage_url": "https://github.com/delacrixmorgan/BoringYouTube"
}
