{
  "manifest_version": 2,
  "name": "Boring YouTube",
  "version": "1.0.0",
  "description": "Makes YouTube thumbnails greyscale to reduce visual distractions, just like Arc's Boring YouTube boost.",
  
  "permissions": [
    "*://www.youtube.com/*",
    "*://youtube.com/*",
    "storage"
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Toggle Boring YouTube",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "content_scripts": [
    {
      "matches": [
        "*://www.youtube.com/*",
        "*://youtube.com/*"
      ],
      "js": ["content-script.js"],
      "css": ["styles.css"],
      "run_at": "document_start"
    }
  ],
  
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "author": "Boring YouTube Extension",
  "homepage_url": "https://github.com/your-username/boring-youtube"
}
